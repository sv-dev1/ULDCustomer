@model IEnumerable<ULDCustomer.Models.ViewModel.Plans>

@{
    ViewBag.Title = "Plans: Mail Monitor";
}
<h2>Plans</h2>
@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ServiceLevel)
            </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceLevel)
                </td>*@
                <td>                    
                <td><a href="/PinPayment/CreateSubscriber/@item.Name">Select Subscription</a></td>
            </tr>
        }

    </table>
}
else
{
    <h2>No Plans Found</h2>
}


